<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="35dp">

        //BACK
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_back"
            android:onClick="onClick"
            app:cornerRadius="50dp"
            app:rippleColor="@color/background"/>

        //LOGO
        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:layout_alignParentEnd="true"/>

        //IMAGEM
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/goodie_persona"
            android:layout_marginTop="80dp"/>


        //DESCRIÇÃO
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Os Diferentes Planos"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/nunitobold"
            android:textSize="26sp"
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/basePlanCard"
            android:layout_width="160dp"
            android:layout_height="300dp"
            android:backgroundTint="@color/background"
            android:layout_marginTop="320dp"
            app:strokeColor="@color/blue"
            app:strokeWidth="2dp"
            app:cardCornerRadius="26dp"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitobold"
                    android:textColor="@color/white"
                    android:text="Base"
                    android:textSize="16sp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitobold"
                    android:textColor="@color/white"
                    android:text="• Cancela a qualquer altura"
                    android:textSize="13sp"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitobold"
                    android:textColor="@color/white"
                    android:text="• 5 Consumíveis"
                    android:textSize="13sp"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitobold"
                    android:textColor="@color/white"
                    android:text="• 1 Acessório até 10€"
                    android:textSize="13sp"
                    android:padding="10dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitobold"
                    android:textColor="@color/white"
                    android:text="19,99€"
                    android:layout_alignParentBottom="true"
                    android:textSize="16sp"
                    android:padding="10dp"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/premiumPlanCard"
            android:layout_width="160dp"
            android:layout_height="300dp"
            android:backgroundTint="@color/background"
            android:layout_marginTop="320dp"
            android:layout_alignParentEnd="true"
            app:strokeColor="@color/yellow"
            app:strokeWidth="2dp"
            app:cardCornerRadius="26dp"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitobold"
                    android:textColor="@color/white"
                    android:text="Premium"
                    android:textSize="16sp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitobold"
                    android:textColor="@color/white"
                    android:text="• Cancela a qualquer altura"
                    android:textSize="13sp"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitobold"
                    android:textColor="@color/white"
                    android:text="• 6 Consumíveis"
                    android:textSize="13sp"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitobold"
                    android:textColor="@color/white"
                    android:text="• 1 Acessório à escolha"
                    android:textSize="13sp"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitobold"
                    android:textColor="@color/white"
                    android:text="• 1 Câmara Descartável"
                    android:textSize="13sp"
                    android:padding="10dp"/>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitobold"
                    android:textColor="@color/white"
                    android:text="29,99€"
                    android:layout_alignParentBottom="true"
                    android:textSize="16sp"
                    android:padding="10dp"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

</LinearLayout>