<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profileImageCard"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:backgroundTint="#AFD5FF"
        app:cardCornerRadius="26dp"
        android:clickable="false"
        android:elevation="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile_pic"
            android:scaleType="centerInside"/>
    </com.google.android.material.card.MaterialCardView>

    //TITULO
    <TextView
        android:id="@+id/userNameGreet"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:text="Olá, Username"
        android:textColor="@color/white"
        android:fontFamily="@font/nunitobold"
        android:textSize="26sp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/preferencesBtn"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:backgroundTint="@color/red"
        android:layout_marginTop="380dp"
        android:layout_marginHorizontal="60dp"
        app:cardCornerRadius="16dp"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                app:tint="@color/white"
                android:src="@drawable/ic_settings" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitobold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:text="Alterar Preferências"
                android:textSize="16sp"
                android:padding="10dp"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/wishlistBtn"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:backgroundTint="@color/yellow"
        android:layout_marginTop="380dp"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="60dp"
        app:cardCornerRadius="16dp"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                app:tint="@color/white"
                android:src="@drawable/ic_heart" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitobold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:text="Ver Wishlist"
                android:textSize="16sp"
                android:padding="10dp"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ordersBtn"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="530dp"
        android:layout_marginHorizontal="60dp"
        app:cardCornerRadius="16dp"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                app:tint="@color/white"
                android:src="@drawable/ic_orders" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitobold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:text="Ver Encomendas"
                android:textSize="16sp"
                android:padding="10dp"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logoutBtn"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:backgroundTint="@color/green"
        android:layout_marginTop="530dp"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="60dp"
        app:cardCornerRadius="16dp"
        android:onClick="logOut"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                app:tint="@color/white"
                android:src="@drawable/ic_log_out" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitobold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:text="Terminar Sessão"
                android:textSize="16sp"
                android:padding="10dp"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>